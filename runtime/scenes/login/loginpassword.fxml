<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<!-- DrLeonardo refactor -->

<Pane fx:id="loginPane" prefHeight="500.0" prefWidth="900.0" styleClass="transparent" xmlns="http://javafx.com/javafx/8.0.201" xmlns:fx="http://javafx.com/fxml/1">
    <Pane fx:id="layout" prefHeight="500.0" prefWidth="900.0" styleClass="transparent, blur">

        <!-- Вертикальная полоса -->
        <Pane id="leftPane" layoutX="45.0" prefHeight="500.0" prefWidth="155.0" styleClass="vline" />

        <!-- Кнопка входа -->
        <fx:include source="authbutton.fxml">

        </fx:include>

        <!-- Навбар -->
        <Pane id="header" prefHeight="100.0" prefWidth="900.0">
            <children>

                <!-- Кнопки управления -->
                <HBox id="controls" alignment="CENTER_RIGHT" layoutY="32.0" prefHeight="37.0" prefWidth="900.0">
                    <children>
                        <fx:include source="../../components/controls.fxml">

                        </fx:include>
                    </children>
                </HBox>

                <!-- Левая часть навбара -->
                <Pane id="leftHeaderPane" layoutX="45.0" prefHeight="100.0" prefWidth="156.0">
                    <children>
                        <TextFlow layoutX="18.0" layoutY="43.0">
                            <children>
                                <Text id="logoName" text="%runtime.scenes.login.logoName" />
                                <Text id="logoProduct" text="%runtime.scenes.login.logoProduct" styleClass="logoTextGray" />
                                <Text id="logoVersion" text="%runtime.scenes.login.logoVersion" />
                            </children>
                        </TextFlow>
                    </children>
                </Pane>
            </children>
        </Pane>
        <TextField id="login" layoutX="224.0" layoutY="207.0" prefHeight="43.0" prefWidth="295.0" promptText="%runtime.scenes.login.login" />
        <PasswordField id="password" layoutX="224.0" layoutY="250.0" prefHeight="43.0" prefWidth="295.0" promptText="%runtime.scenes.login.password" />
    </Pane>

    <!-- Приветствие игрока -->
    <Pane id="player" layoutX="224.0" layoutY="198.0" prefHeight="104.0" prefWidth="676.0" visible="false">
        <children>
            <ImageView id="playerHead" fitHeight="53.0" fitWidth="53.0" layoutX="11.0" layoutY="26.0" pickOnBounds="true" preserveRatio="true" />
            <Label id="playerName" layoutX="79.0" layoutY="20.0" prefHeight="49.0" prefWidth="486.0" text="PLAYER123456" />
            <Label id="welcome" layoutX="79.0" layoutY="62.0" text="%runtime.scenes.login.welcome" />
        </children>
    </Pane>

    <!-- Подключение стилей-->
    <stylesheets>
        <URL value="@login.css" />
        <URL value="@../../styles/global.css" />
        <URL value="@../../styles/variables.css" />
    </stylesheets>

</Pane>
